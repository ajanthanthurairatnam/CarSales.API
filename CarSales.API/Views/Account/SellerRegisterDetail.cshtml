
@model Pluralsight.AspNetDemo.Controllers.SellerRegisterModel

@{
    ViewBag.Title = "";
}

@using (Html.BeginForm("SellerRegisterDetail", "Account", FormMethod.Post))
{
    <div>

        <div class="car-grid content-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-xs-12 col-md-push-4">
                        <!-- Block heading Start-->
                        <div class="block-heading">
                            <div class="row">
                                <div class="col-lg-6 col-md-5 col-sm-5 col-xs-2">
                                    <div class="sorting-options">
                                        <span style="margin: 10px 15px 0 0"> @Html.TextBoxFor(model => model.SearchText)</span>
                                    </div>

                                </div>
                                <div class="col-lg-6 col-md-7 col-sm-7 col-xs-10">
                                    <div class="sorting-options">
                                        <select class="sorting">
                                            <option>Price: High to low</option>
                                            <option>Price: Low to high</option>
                                            <option>Sells: High to low</option>
                                            <option>Sells: Low to high</option>
                                        </select>
                                        <a href="car-list-2.html" class="change-view-btn"><i class="fa fa-th-list"></i></a>
                                        <a href="car-grid-2.html" class="change-view-btn active-view-btn"><i class="fa fa-th-large"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Block heading end -->
                        <!-- Car grid start -->
                        <div class="clearfix"></div>
                        <div class="row">
                            @foreach (var a in Model.Advertisement)
                            {
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 wow fadeInUp delay-03s" style="visibility: visible; animation-name: fadeInUp;">
                                    <!-- Car box start-->
                                    <div class="thumbnail car-box clearfix">
                                        <div class="car-box-thumbnail">
                                            <img src="https://storage.googleapis.com/themeforest-auto-car/img/grid/bmw_emw_m3_diski_serie.jpg" alt="bmw_emw_m3_diski_serie">
                                            <div class="is-featured">
                                                <span>Featured</span>
                                            </div>
                                            <div class="listing-for">
                                                <span class="for">For Rent</span>
                                            </div>

                                            <div class="listing-price">
                                                <span class="del"><del>$1250.00</del></span>
                                                <br>
                                                <span>$1000.00</span>
                                            </div>
                                        </div>
                                        <!-- detail -->
                                        <div class="caption detail">
                                            <!-- Header -->
                                            <header class="clearfix">
                                                <h5 class="title">
                                                    <a href="car-details.html">@a.Title</a>
                                                </h5>

                                            </header>
                                            <!-- paragraph -->
                                            <p>@a.Description</p>
                                            <!-- Facilities List -->
                                            <div class="facilities-area">
                                                <ul class="facilities-list clearfix">
                                                    <li>
                                                        <i class="fa fa-tachometer"></i>
                                                        <span>@a.Fuel</span>
                                                    </li>
                                                    <li>
                                                        <i class="flaticon-automatic-flash-symbol"></i>
                                                        <span>@a.Transmission</span>
                                                    </li>
                                                    <li>
                                                        <i class="flaticon-road-with-broken-line"></i>
                                                        <span>@a.AudoMeter</span>
                                                    </li>
                                                    <li>
                                                        <i class="flaticon-racing-flag"></i>
                                                        <span>@a.BodyType</span>
                                                    </li>
                                                    <li>
                                                        <i class="flaticon-transport"></i>
                                                        <span>@a.BodyType</span>
                                                    </li>
                                                    <li>
                                                        <i class="flaticon-time"></i>
                                                        <span>2017</span>
                                                    </li>
                                                </ul>
                                            </div>

                                            <div class="carbox-overlap-wrapper">
                                                <h2>Bmw e46 m3 Diski Serie</h2>
                                                <h4>$49,000</h4>
                                                <div class="overlap-btns-area">
                                                    <a href="car-details.html" class="overlap-btn"><i class="fa fa-link"></i></a>
                                                    <a href="#" class="overlap-btn" data-toggle="modal" data-target="#carVideo"><i class="fa fa-youtube-play"></i></a>
                                                    <a href="#" class="overlap-btn" data-toggle="modal" data-target="#carGallary"><i class="fa fa-image"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Car box end-->
                                </div>



                            }
                            <!-- Repeat -->
                            <!-- End Repeat -->

                        </div>
                        <!-- Car grid end-->
                        <!-- Page navigation start-->

                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                @for (int i = 0; i < Model.PageNos; i++)
                                {

                                    <li>



                                        @Html.ActionLink(
                               linkText: (i + 1).ToString(),
                               actionName: "GetAdvertisements",
                               controllerName: "VehicleAdvertisementsMVC",
                               routeValues: new
                               {
                                   PageSize = 10,
                                   SearchText = Model.SearchText,
                                   PageNo = (i + 1)
                               },
                               htmlAttributes: null
                               )

                                    </li>

                                }



                            </ul>
                        </nav>


                        <!-- Page navigation end-->
                    </div>
                    <div class="col-lg-4 col-md-4 col-xs-12 col-md-pull-8">
                        <!-- Sidebar start-->
                        <div>
                            <h4>SellerRegisterModel</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.ContactPhone)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ContactPhone)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.ContactMobile)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ContactMobile)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.ContactEMail)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ContactEMail)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.PickupAddress)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.PickupAddress)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.PostCode)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.PostCode)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.AspNetUsersId)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.AspNetUsersId)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Password)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Password)
                                </dd>

                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Edit", "SellerRegisterEdit","Account", new { ID = Model.ID },null) |

                        </p>

                        <!-- Sidebar End-->
                    </div>
                </div>
            </div>
        </div>

    </div>
}

